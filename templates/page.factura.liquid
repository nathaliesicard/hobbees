<div class="section-header">
  <h1 class="section-header__title">{{ page.title }}</h1>
</div>

<div class="rte">
  {{ page.content }}
</div>


{% form 'contact' %}

  {% if form.posted_successfully? %}
    <p class="note form-success">
      {{ 'contact.form.post_factura' | t }}
    </p>
  {% endif %}

  {{ form.errors | default_errors }}

  <label for="numOrden">Número de Orden #:</label>
  <input type="text" id="numOrden" name="contact[numero_orden]" placeholder="12345" required />

    <label for="monto">Monto Total:</label>
    <input type="text" id="monto" name="contact[monto]" placeholder="1,200.00" required />

    <label for="razonSocial">Razón Social:</label>
    <input type="text" id="razonSocial" name="contact[razon_social]" placeholder="SCRAPBOOK Y MAS S.A. DE C.V." required />

    <label for="rfc">RFC:</label>
        <input type="text" id="rfc" name="contact[rfc]" placeholder="ABCD123456EFG" required />

    <label for="calle">Calle y Número:</label>
      <input type="text" id="calle" name="contact[calle]" placeholder="Av. Revolución 12" required />

      <label for="colonia">Colonia:</label>
            <input type="text" id="colonia" name="contact[colonia]" placeholder="Col. Reforma" required />

      <label for="ciudad">Municipio o Delegación:</label>
            <input type="text" id="ciudad" name="contact[ciudad]" placeholder="Álvaro Obregón" required />

      <label for="estado">Estado:</label>
                  <input type="text" id="estado" name="contact[estado]" placeholder="D.F." required />

            <label for="cp">Código Postal:</label>
                  <input type="text" id="cp" name="contact[cp]" placeholder="12345" required />



  {% assign name_attr = 'contact.form.name' | t | handle %}
  <label for="ContactFormName">{{ 'contact.form.name' | t }}:</label>
  <input type="text" id="ContactFormName" name="contact[{{ name_attr }}]" placeholder="{{ 'contact.form.name' | t }}" autocapitalize="words" value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.name }}{% endif %}">

  <label for="ContactFormEmail">{{ 'contact.form.email' | t }}:</label>
  <input type="email" id="ContactFormEmail" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">

  {% assign name_attr = 'contact.form.phone' | t | handle %}
  <label for="ContactFormPhone">{{ 'contact.form.phone' | t }}:</label>
  <input type="tel" id="ContactFormPhone" name="contact[{{ name_attr }}]" placeholder="{{ 'contact.form.phone' | t }}" pattern="[0-9\-]*" value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.phone }}{% endif %}">


  <input type="submit" class="btn right" value="{{ 'contact.form.send' | t }}">

{% endform %}
